__lua__

p = {
    x = 64,
    y = 64,
    vx = 0,
    vy = 0
}
b = {
    x = 64,
    y = 64,
    vy = 0
}
e = {
    x = 64,
    y = 20
}
function _init()
    -- hello
end

function _update()
    p.vx = 0
    p.vy = 0
    b.vy = -3
    -- bounds
    if p.x > 127 then
        p.x = 0
    end

    if p.x < 0 then
        p.x = 127
    end

    if p.y > 127 then
        p.y = 0
    end

    if p.y < 0 then
        p.y = 127
    end
    -- movement
    if btn(0) then
        p.vx = -2
    end

    if btn(1) then
        p.vx = 2
    end
    if btn(2) then
        p.vy = -2
    end
    if btn(3) then
        p.vy = 2
    end

    -- shoot
    if btnp(5) then
        b.x = p.x
        b.y = p.y
        sfx(0)
    end

    p.x = p.x + p.vx
    p.y = p.y + p.vy
    b.y = b.y + b.vy
end

function _draw()
    cls(0)
    spr(1, p.x, p.y)
    spr(3, b.x, b.y)
end

